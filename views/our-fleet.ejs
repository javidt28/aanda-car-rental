<!-- views/our-fleet.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Our Fleet - A&A Car Rentals</title>
    <link rel="stylesheet" href="/styles/styles.css"> <!-- Include the common styles -->
</head>

<body>
    <header>
        <div id="logo">
            <h1>A&A Car Rentals</h1>
        </div>
        <nav>
            <a href="/">Home</a>
            <a href="/booking">Book a Car</a>
            <a href="/profile">Profile</a>
            <a href="/our-fleet">Our Fleet</a> <!-- New link for Our Fleet page -->
            <a href="/auth/register">Register</a>
            <a href="/auth/login">Login</a>
        </nav>
    </header>

    <section class="hero-our-fleet">
        <!-- Include hero image or content specific to the Our Fleet page -->
    </section>

    <section class="fleet-description">
        <h2>Explore Our Impressive Fleet</h2>
        <p>Discover a wide range of vehicles to meet your transportation needs. From compact cars to spacious SUVs, we have the perfect ride for every journey.</p>
    </section>

    <!-- Add more sections or content as needed -->

    <section class="our-fleet-content">
        <h1>Our Fleet</h1>
    
        <div class="fleet-cards">
            <% vehicles.forEach(vehicle => { %>
                <div class="vehicle-card">
                    <img src="<%= vehicle.imageUrl %>" alt="<%= vehicle.make %> <%= vehicle.model %> Image">
                    <h2><%= vehicle.make %> <%= vehicle.model %></h2>
                    <p><strong>Category:</strong> <%= vehicle.category %></p>
                    <p><%= vehicle.description %></p>
                </div>
            <% }); %>
        </div>
    </section>
    
    <footer class="footer">
        <p>&copy; 2024 A&A Car Rental. All rights reserved.</p>
    </footer>
</body>

</html>
